<?xml version="1.0" encoding="GB2312" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="KSS_SOFT">
	<resultMap type="KssSoftDO" id="kssSoftResult">
		<id property="id" column="ID" javaType="java.lang.Short" jdbcType="SMALLINT" />
		<result property="softcode" column="SOFTCODE" javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="softkey" column="SOFTKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="softname" column="SOFTNAME" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="islock" column="ISLOCK" javaType="java.lang.Boolean" jdbcType="BOOLEAN" />
		<result property="intervaltime" column="INTERVALTIME" javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="publickey" column="PUBLICKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="privatekey" column="PRIVATEKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="KssSoftDO">
		INSERT INTO KSS_SOFT (
		softcode,
		softkey,
		softname,
		islock,
		intervaltime,
		publickey,
		privatekey)
		VALUES (
		#{softcode},
		#{softkey},
		#{softname},
		#{islock},
		#{intervaltime},
		#{publickey},
		#{privatekey})
	</insert>

	<update id="update" parameterType="java.util.Map">
		UPDATE KSS_SOFT
		<set>
			islock = #{islock},
			intervaltime = #{intervaltime},
			publickey = #{publickey},
			privateke = #{privateke}
		</set>
		where id=#{id}
	</update>

	<select id="selectById" parameterType="int" resultMap="kssSoftResult">
		select
		* from KSS_SOFT WHERE id=#{id}
	</select>

	<delete id="deleteById" parameterType="int">
		delete from KSS_SOFT
		WHERE
		ID=#{id}
	</delete>

	<delete id="deleteByIds" parameterType="java.util.List">
		delete from KSS_SOFT
		WHERE ID in
		<foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</delete>

	<select id="selectCount" parameterType="java.util.Map" resultType="java.lang.Integer">
		select COUNT(*) from KSS_SOFT
	</select>

	<select id="selectByPage" parameterType="java.util.Map" resultMap="kssSoftResult">
		SELECT * FROM KSS_SOFT
		<include refid="Pagination" />
	</select>

	<!-- иом│ -->
	<sql id="Pagination">
		<if test="startIndex != null and pageSize != null">
			LIMIT #{startIndex},#{pageSize}
		</if>
	</sql>

</mapper>
