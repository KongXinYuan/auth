<?xml version="1.0" encoding="GB2312" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="KSS_SOFT">
	<resultMap type="KssSoftDO" id="kssSoftResult">
		<id property="id" column="ID" javaType="java.lang.Long" jdbcType="INTEGER" />
		<result property="softcode" column="SOFTCODE" javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="softkey" column="SOFTKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="softname" column="SOFTNAME" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="islock" column="ISLOCK" javaType="java.lang.Boolean" jdbcType="BOOLEAN" />
		<result property="intervaltime" column="INTERVALTIME" javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="clientpubkey" column="CLIENTPUBKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="serverprivkey" column="SERVERPRIVKEY" javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="KssSoftDO">
		INSERT INTO KSS_SOFT (
		softcode,
		softkey,
		softname,
		islock,
		intervaltime,
		clientpubkey,
		serverprivkey)
		VALUES (
		#{softcode},
		#{softkey},
		#{softname},
		#{islock},
		#{intervaltime},
		#{clientpubkey},
		#{serverprivkey})
	</insert>

	<select id="selectLastId" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</select>
	
	<update id="updateSoftcode" parameterType="java.util.Map">
		UPDATE KSS_SOFT
		<set>
			softcode = #{softcode},
			islock = 0
		</set>
		where id=#{id}
	</update>
	
	
	<update id="update" parameterType="java.util.Map">
		UPDATE KSS_SOFT
		<set>
			islock = #{islock},
			intervaltime = #{intervaltime},
			clientpubkey = #{clientpubkey},
			serverprivkey = #{serverprivkey}
		</set>
		where id=#{id}
	</update>
	
	<update id="updateLock" parameterType="java.util.Map">
		UPDATE KSS_SOFT
		<set>
			islock = #{islock}
		</set>
		where id=#{id}
	</update>
	

	<select id="selectById" parameterType="int" resultMap="kssSoftResult">
		select
		* from KSS_SOFT WHERE id=#{id}
	</select>

	<delete id="deleteById" parameterType="int">
		delete from KSS_SOFT
		WHERE
		ID=#{id}
	</delete>

	<delete id="deleteByIds" parameterType="java.util.List">
		delete from KSS_SOFT
		WHERE ID in
		<foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</delete>

	<select id="selectCountByQueryCondition" parameterType="java.util.Map" resultType="java.lang.Integer">
		select COUNT(*) from KSS_SOFT
		<include refid="QueryCondition" />
	</select>

	<select id="selectByQueryCondition" parameterType="java.util.Map" resultMap="kssSoftResult">
		SELECT * FROM KSS_SOFT
		<include refid="QueryCondition" />
		<include refid="Pagination" />
	</select>
	
	
	<!-- 查询条件 -->
	<sql id="QueryCondition">
		<trim prefix="where" prefixOverrides="and|or">
			<if test="softcode != null">
				softcode = #{softcode}
			</if>	
		</trim>
	</sql>
	
	<!-- 分页 -->
	<sql id="Pagination">
		<if test="startIndex != null and pageSize != null">
			LIMIT #{startIndex},#{pageSize}
		</if>
	</sql>

</mapper>
