<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="KSS_SOFT_RECHARGE">
	<resultMap type="KssSoftRechargeDO" id="kssSoftRechargeResult">
		<id property="id" column="ID" javaType="java.lang.Long" jdbcType="INTEGER" />
		<result property="adminid" column="ADMINID" javaType="java.lang.Long" jdbcType="INTEGER" />
		<result property="username" column="username" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="oldcday" column="oldcday" javaType="java.math.BigDecimal" jdbcType="DECIMAL" />
		<result property="newcday" column="newcday" javaType="java.math.BigDecimal" jdbcType="DECIMAL" />
		<result property="cdkey" column="cdkey" javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>
	

	<insert id="insertWithSeg" parameterType="KssSoftRechargeDO">
		INSERT INTO KSS_SOFT_RECHARGE (
		adminid,
		username,
		oldcday,
		newcday,
		cdkey)
		VALUES (
		#{adminid},
		#{username},
		#{oldcday},
		#{newcday},
		#{cdkey})
	</insert>
	
	<select id="selectByIdWithSeg" parameterType="java.lang.Long" resultMap="kssSoftRechargeResult">
		select * from KSS_SOFT_RECHARGE WHERE id=#{id}
	</select>

	<delete id="deleteByIdWithSeg" parameterType="java.lang.Long">
		delete from KSS_SOFT_RECHARGE WHERE ID=#{id}
	</delete>

	<delete id="deleteByIdsWithSeg" parameterType="java.util.List">
		delete from KSS_SOFT_RECHARGE WHERE ID in
		<foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</delete>

	<select id="selectCountByQueryConditionWithSeg" parameterType="java.util.Map" resultType="java.lang.Long">
		select COUNT(*) from KSS_SOFT_RECHARGE
		<include refid="QueryCondition" />
	</select>

	<select id="selectByQueryConditionWithSeg" parameterType="java.util.Map" resultMap="kssSoftRechargeResult">
		SELECT * FROM KSS_SOFT_RECHARGE
		<include refid="QueryCondition" />
		<include refid="Pagination" />
	</select>
	
	
	<!-- 查询条件 -->
	<sql id="QueryCondition">
		<trim prefix="where" prefixOverrides="and|or">
			<if test="adminid != null">
				adminid = #{adminid}
			</if>
			<if test="username != null">
				and username = #{username}
			</if>
			<if test="cdkey != null">
				and cdkey = #{cdkey}
			</if>
		</trim>
	</sql>
	
	<!-- 分页 -->
	<sql id="Pagination">
		<if test="startIndex != null and pageSize != null">
			LIMIT #{startIndex},#{pageSize}
		</if>
	</sql>

</mapper>
